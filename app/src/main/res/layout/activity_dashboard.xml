<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard"
    android:background="#ffffff"
    >

    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/slider"
        android:layout_width="fill_parent"
        android:layout_height="270dp"

        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="320dp"

            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="270dp"


                android:gravity="bottom"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="24dp"

                />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:background="@drawable/app_background"

                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"

                    android:background="@drawable/outline"
                    android:orientation="vertical"

                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:id="@+id/loca"
                    android:onClick="onClickMethod"

                    >

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:id="@+id/loc"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/ic_place_black_24dp"
                        android:tint="@color/blue" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:padding="8dp"
                        android:text="Location"
                        android:textAlignment="center"
                        android:textColor="@color/blue"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"

                    android:layout_weight="1"
                    android:background="@drawable/outline"
                    android:orientation="vertical"

                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:id="@+id/stud"
                    android:onClick="onClickMethod"

                    >

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:id="@+id/stu"
                        android:src="@drawable/ic_wc_black_24dp"
                        android:tint="@color/blue" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:padding="8dp"
                        android:text="Students"
                        android:textAlignment="center"
                        android:textColor="@color/blue"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"

                    android:background="@drawable/outline"
                    android:orientation="vertical"

                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:id="@+id/elibra"
                    android:onClick="onClickMethod"

                    >

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:id="@+id/elibr"
                        android:src="@drawable/ic_library_books_black_24dp"
                        android:tint="@color/blue" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:padding="8dp"
                        android:text="E-Library"

                        android:textAlignment="center"
                        android:textColor="@color/blue"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/app_background"
                android:orientation="horizontal"
                android:weightSum="3"

                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"

                    android:background="@drawable/outline"
                    android:orientation="vertical"

                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:id="@+id/sport"
                    android:onClick="onClickMethod"

                    >

                    <ImageView

                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:id="@+id/sports"
                        android:src="@drawable/ic_pool_black_24dp"
                        android:tint="@color/blue" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:padding="8dp"
                        android:text="Sports"
                        android:textAlignment="center"
                        android:textColor="@color/blue"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"

                    android:background="@drawable/outline"
                    android:orientation="vertical"

                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:id="@+id/lecs"
                    android:onClick="onClickMethod"

                    >

                    <ImageView
                        android:layout_width="50dp"
                        android:id="@+id/lec"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/ic_folder_shared_black_24dp"
                        android:tint="@color/blue" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:padding="8dp"
                        android:text="Lecturers"
                        android:textAlignment="center"
                        android:textColor="@color/blue"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"

                    android:background="@drawable/outline"
                    android:orientation="vertical"

                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:id="@+id/caf"
                    android:onClick="onClickMethod"

                    >

                    <ImageView

                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:id="@+id/cafe"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/ic_local_cafe_black_24dp"
                        android:tint="@color/blue" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:padding="8dp"
                        android:text="Cafe"
                        android:textAlignment="center"
                        android:textColor="@color/blue"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/app_background"
                android:weightSum="3"

                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"

                    android:background="@drawable/outline"
                    android:orientation="vertical"

                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:id="@+id/cont"
                    android:onClick="onClickMethod"

                    >

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:id="@+id/contac"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/ic_local_phone_black_24dp"
                        android:tint="@color/blue" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:padding="8dp"
                        android:text="Contact"
                        android:textAlignment="center"
                        android:textColor="@color/blue"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"

                    android:background="@drawable/outline"
                    android:orientation="vertical"

                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:id="@+id/tt"
                    android:onClick="onClickMethod"

                    >

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:id="@+id/time"
                        android:src="@drawable/ic_web_black_24dp"
                        android:tint="@color/blue" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:padding="8dp"
                        android:text="TimeTable"
                        android:textAlignment="center"
                        android:textColor="@color/blue"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"

                    android:background="@drawable/outline"
                    android:orientation="vertical"

                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:id="@+id/not"
                    android:onClick="onClickMethod"

                    >

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:id="@+id/event"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/ic_event_note_black_24dp"
                        android:tint="@color/blue" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:padding="8dp"
                        android:text="Notices"
                        android:textAlignment="center"
                        android:textColor="@color/blue"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>





</RelativeLayout>
